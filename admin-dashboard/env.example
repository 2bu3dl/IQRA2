# IQRA2 Admin Dashboard Environment Configuration

# Server Configuration
PORT=5001
NODE_ENV=development

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
SESSION_SECRET=your-super-secure-session-secret-key-here
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-key-here
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://admin.iqra2.app

# Database Configuration
DB_PATH=./data/admin_dashboard.db

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=300000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Security Settings
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MS=900000
SESSION_TIMEOUT_MS=1800000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_INTERVAL=30000

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Testing Configuration
ENABLE_TESTING=true
TEST_MODE=false

# Development Settings
DEBUG_MODE=true
ENABLE_LOGGING=true
LOG_DATABASE_QUERIES=false 